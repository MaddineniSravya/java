public class Student {

    private String name;
    private int age;
    private String department;

    // Constructor 1: No arguments (default values)
    public Student() {
        this.name = "Unknown";
        this.age = 0;
        this.department = "Undeclared";
    }

    // Constructor 2: One argument (name)
    public Student(String name) {
        this.name = name;
        this.age = 0;
        this.department = "Undeclared";
    }

    // Constructor 3: Two arguments (name and age)
    public Student(String name, int age) {
        this.name = name;
        this.age = age;
        this.department = "Undeclared";
    }

    // Constructor 4: Three arguments (name, age, and department)
    public Student(String name, int age, String department) {
        this.name = name;
        this.age = age;
        this.department = department;
    }
    public void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Department: " + department);
        System.out.println();
    }

    public static void main(String[] args) {
        Student s1 = new Student();
        Student s2 = new Student("Sravya");
        Student s3 = new Student("Deepu", 20);
        Student s4 = new Student("teja", 22, "Computer Science");

        s1.displayInfo();
        s2.displayInfo();
        s3.displayInfo();
        s4.displayInfo();
    }
}
